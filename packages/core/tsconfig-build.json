{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "**/demos/*.ts",
    "**/demos/*.tsx",
    "typings"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./types",
    "composite": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../utils/tsconfig-build.json"
    },
    {
      "path": "../theme-light/tsconfig-build.json"
    }
  ]
}
